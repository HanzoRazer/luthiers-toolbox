{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/phase2_ods_snapshot.schema.json",
  "title": "Phase2ODSSnapshot",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "capdir", "freqs_hz", "points", "provenance"],
  "properties": {
    "schema_version": { "type": "string", "const": "phase2_ods_snapshot_v2" },
    "capdir": { "type": "string" },

    "freqs_hz": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "number", "exclusiveMinimum": 0 }
    },

    "points": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["point_id", "x_mm", "y_mm", "H_mag", "H_phase_deg"],
        "properties": {
          "point_id": { "type": "string", "pattern": "^[A-Z][0-9]{1,2}$" },
          "x_mm": { "type": "number" },
          "y_mm": { "type": "number" },

          "H_mag": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "number", "minimum": 0 }
          },
          "H_phase_deg": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "number" }
          },

          "coherence": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },

    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["algo_id", "algo_version", "numpy_version", "scipy_version", "computed_at_utc"],
      "properties": {
        "algo_id": {
          "type": "string",
          "description": "Algorithm identifier for reproducibility"
        },
        "algo_version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of the DSP algorithm"
        },
        "numpy_version": {
          "type": "string",
          "description": "NumPy library version used"
        },
        "scipy_version": {
          "type": "string",
          "description": "SciPy library version used"
        },
        "computed_at_utc": {
          "type": "string",
          "minLength": 10,
          "description": "ISO 8601 UTC timestamp of computation"
        }
      }
    }
  }
}
