{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/phase2_grid.schema.json",
  "title": "Phase2Grid",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "units", "points"],
  "properties": {
    "schema_version": { "type": "string", "const": "phase2_grid_v1" },
    "units": {
      "type": "object",
      "additionalProperties": false,
      "required": ["length"],
      "properties": {
        "length": { "type": "string", "enum": ["mm"] }
      }
    },
    "grid_id": { "type": "string" },
    "description": { "type": "string" },
    "points": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["point_id", "x_mm", "y_mm"],
        "properties": {
          "point_id": {
            "type": "string",
            "pattern": "^[A-Z][0-9]{1,2}$",
            "description": "Grid label like A1, B3, etc."
          },
          "x_mm": { "type": "number" },
          "y_mm": { "type": "number" },
          "label": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["top", "back", "side", "unknown"],
            "default": "unknown"
          }
        }
      }
    }
  }
}
