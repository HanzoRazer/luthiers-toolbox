{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/tap-tone/schemas/channels.schema.json",
  "title": "Tap Tone Channels (channels.json)",
  "type": "object",
  "additionalProperties": false,
  "required": ["channels"],
  "properties": {
    "channels": {
      "type": "array",
      "minItems": 1,
      "maxItems": 64,
      "items": { "$ref": "#/$defs/channel" }
    }
  },
  "$defs": {
    "channel": {
      "type": "object",
      "additionalProperties": false,
      "required": ["index", "id", "type"],
      "properties": {
        "index": { "type": "integer", "minimum": 0, "maximum": 63 },
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["microphone", "accelerometer", "other"] },
        "model": { "type": ["string", "null"] },
        "serial": { "type": ["string", "null"] },
        "role": { "type": ["string", "null"] },
        "notes": { "type": ["string", "null"] }
      }
    }
  }
}
