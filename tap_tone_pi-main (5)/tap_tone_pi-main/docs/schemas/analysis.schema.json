{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/tap-tone/schemas/analysis.schema.json",
  "title": "Tap Tone Analysis (analysis.json)",
  "type": "object",
  "additionalProperties": false,
  "required": ["ts_utc", "sample_rate", "channels", "dominant_hz", "rms", "clipped", "confidence"],
  "properties": {
    "ts_utc": {
      "type": "string",
      "description": "UTC timestamp for this capture (ISO 8601).",
      "format": "date-time"
    },
    "label": {
      "type": ["string", "null"],
      "description": "Optional operator label / tap point tag."
    },
    "sample_rate": {
      "type": "integer",
      "minimum": 8000,
      "maximum": 384000
    },
    "channels": {
      "type": "integer",
      "minimum": 1,
      "maximum": 64,
      "description": "Number of audio channels in audio.wav."
    },
    "dominant_hz": {
      "type": ["number", "null"],
      "minimum": 0,
      "description": "Dominant peak frequency (Hz). Null if none detected."
    },
    "rms": {
      "type": "array",
      "description": "Per-channel RMS amplitude (float). Length MUST equal `channels`.",
      "minItems": 1,
      "items": { "type": "number", "minimum": 0 },
      "allOf": [
        {
          "if": { "properties": { "channels": { "const": 1 } } },
          "then": { "minItems": 1, "maxItems": 1 }
        }
      ]
    },
    "clipped": {
      "type": "array",
      "description": "Per-channel clip flags. Length MUST equal `channels`.",
      "minItems": 1,
      "items": { "type": "boolean" },
      "allOf": [
        {
          "if": { "properties": { "channels": { "const": 1 } } },
          "then": { "minItems": 1, "maxItems": 1 }
        }
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "0..1 confidence for this capture (heuristic, conservative)."
    },

    "peaks": {
      "type": "object",
      "description": "Per-channel peak lists keyed by channel id (e.g. ch0, ch1) or mic id.",
      "additionalProperties": {
        "type": "array",
        "items": { "$ref": "#/$defs/peak" }
      }
    },

    "cross_channel": {
      "type": "object",
      "description": "Cross-channel metrics (Phase 2+).",
      "additionalProperties": false,
      "properties": {
        "pair": {
          "type": "array",
          "description": "Channel pair for cross-channel metrics (by channel index).",
          "minItems": 2,
          "maxItems": 2,
          "items": { "type": "integer", "minimum": 0 }
        },
        "delay_samples": { "type": ["integer", "null"] },
        "delay_seconds": { "type": ["number", "null"] },
        "coherence": {
          "type": "array",
          "description": "Coherence values as a sparse frequency series.",
          "items": { "$ref": "#/$defs/freq_value" }
        },
        "phase_deg": {
          "type": "array",
          "description": "Phase difference (degrees) as a sparse frequency series.",
          "items": { "$ref": "#/$defs/freq_value" }
        }
      }
    },

    "algo": {
      "type": "object",
      "description": "Optional analysis algorithm metadata (recommended for reproducibility).",
      "additionalProperties": false,
      "properties": {
        "version": { "type": "string" },
        "fft_size": { "type": "integer", "minimum": 1 },
        "window": { "type": "string" },
        "highpass_hz": { "type": ["number", "null"], "minimum": 0 },
        "peak_min_hz": { "type": ["number", "null"], "minimum": 0 },
        "peak_max_hz": { "type": ["number", "null"], "minimum": 0 },
        "peak_min_prominence": { "type": ["number", "null"], "minimum": 0 }
      }
    },

    "reserved": {
      "type": "object",
      "description": "Reserved space for future fields (instrument_id, build_stage, etc.).",
      "additionalProperties": true
    }
  },
  "$defs": {
    "peak": {
      "type": "object",
      "additionalProperties": false,
      "required": ["freq_hz", "magnitude"],
      "properties": {
        "freq_hz": { "type": "number", "minimum": 0 },
        "magnitude": { "type": "number", "minimum": 0 }
      }
    },
    "freq_value": {
      "type": "object",
      "additionalProperties": false,
      "required": ["freq_hz", "value"],
      "properties": {
        "freq_hz": { "type": "number", "minimum": 0 },
        "value": { "type": "number" }
      }
    }
  }
}
