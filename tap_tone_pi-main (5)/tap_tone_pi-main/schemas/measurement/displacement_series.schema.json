{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "displacement_series.schema.json",
  "title": "Displacement Time Series (Dial Indicator)",
  "type": "object",
  "required": ["artifact_type", "unit", "sample_rate_hz", "ts_utc_start", "data"],
  "properties": {
    "artifact_type": { "const": "displacement_series" },
    "unit": { "enum": ["mm", "in"] },
    "sample_rate_hz": { "type": "number" },
    "ts_utc_start": { "type": "string" },
    "data": {
      "type": "array",
      "items": {
        "type": "array",
        "prefixItems": [{ "type": "number" }, { "type": "number" }],
        "minItems": 2,
        "maxItems": 2
      }
    }
  }
}
