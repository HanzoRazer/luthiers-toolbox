{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "manifest.schema.json",
  "title": "Measurement Manifest",
  "type": "object",
  "required": ["artifact_type","ts_utc","artifacts"],
  "properties": {
    "artifact_type": { "const": "manifest" },
    "ts_utc": { "type": "string" },
    "rig": { "type": "object" },
    "notes": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256", "size"],
        "properties": {
          "path": {"type":"string"},
          "sha256": {"type":"string"},
          "size": {"type":"integer"}
        }
      }
    }
  }
}
